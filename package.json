{
  "name": "@m.wang/fetch",
  "version": "0.1.1-beta.0",
  "description": "Promise based HTTP client for the quick app",
  "main": "src/index.js",
  "scripts": {
    "test": "",
    "commit": "git-cz",
    "release:beta": "npm run test && standard-version --prerelease beta && npm publish --tag beta && git push --follow-tags",
    "release": "npm run test && standard-version && npm publish && git push --follow-tags"
  },
  "author": "M.Wang <wangmin2@meizu.com>",
  "license": "MIT",
  "devDependencies": {
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.1.0",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "standard-version": "^6.0.1"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{html,css}": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-recommended"
  }
}
